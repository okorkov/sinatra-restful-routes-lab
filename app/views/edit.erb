<h1> Edit a recipe </h1>


<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Name of the dish: <input type="text" name="name" size="20" value=<%=@recipe.name%>> </p>
  <p> Cooking time: <input type="text" name="cook_time" size="10" placeholder="minutes" value=<%=@recipe.cook_time%>> </p>
  <p> List of ingredients: <input type="text" name="ingredients" size="50" value="<%=@recipe.ingredients%>"> </p>

  <input type="submit" value="save">
</form> 

